<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/call_log_item"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    android:clickable="true"
    android:paddingStart="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingBottom="4dp"
    android:paddingEnd="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_margin="5dp"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:id="@+id/contactImage"
        android:src="@drawable/pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/app_name" />
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:textColor="#fff"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/real_number"
            android:textSize="15sp"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_width="0dp" />
        <TextView
            android:textColor="#fff"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/real_number"
            android:textSize="15sp"
            android:id="@+id/realtxt"
            android:clickable="true"
            android:transitionName="real"
            android:layout_height="wrap_content"
            android:layout_width="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:textColor="#fff"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:clickable="true"
            android:text="@string/fake_number"
            
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>
        <TextView
            android:textColor="#fff"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:clickable="true"
            android:text="@string/fake_number"
            android:id="@+id/faketxt"
            android:transitionName="fake"
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>
    </LinearLayout>
    <LinearLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:textColor="#fff"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:clickable="true"
            android:text="@string/display_name"

            android:layout_height="wrap_content"
            android:layout_width="0dp" />
        <TextView android:textColor="#fff"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:clickable="true"
            android:id="@+id/nametxt"
            android:text="@string/display_name"
            android:transitionName="name"
            android:layout_height="wrap_content"
            android:layout_width="0dp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:textColor="#fff"
        android:layout_gravity="start"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:clickable="true"
        android:text="@string/time"
        android:id="@+id/time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <TextView
        android:textColor="#fff"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="end"
        android:gravity="end"
        android:textSize="15sp"
        android:clickable="true"
        android:text="@string/duration"
        android:id="@+id/duration"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/></LinearLayout>

</LinearLayout>
    

</LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>